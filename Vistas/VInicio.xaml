<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rsanchezT2.Vistas.VInicio"
             Title="VInicio">
    <VerticalStackLayout>

        <Label Text="Sistema de Calificaciones" FontSize="24" HorizontalOptions="Center" />

        <Picker x:Name="estudiantePicker" Title="Seleccionar Estudiante" />

        <Label Text="Nota Seguimiento 1 (30%)" />
        <Entry x:Name="seguimiento1Entry" Keyboard="Numeric" MaxLength="4" />

        <Label Text="Examen 1 (20%)" />
        <Entry x:Name="examen1Entry" Keyboard="Numeric" MaxLength="4" />

        <Label Text="Nota Seguimiento 2 (30%)" />
        <Entry x:Name="seguimiento2Entry" Keyboard="Numeric" MaxLength="4" />

        <Label Text="Examen 2 (20%)" />
        <Entry x:Name="examen2Entry" Keyboard="Numeric" MaxLength="4" />

        <DatePicker x:Name="fechaPicker" />

        <Button Text="Calcular"  Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>